{
  "name": "@boonya/frontend-libs",
  "description": "A set of helpfull utilities that may be useful while doing frontend development.",
  "repository": "https://github.com/boonya/frontend-libs",
  "author": "Serhii <boonya> Buinytskyi",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "node": "~22.15.1",
    "npm": "~10.9.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "rm -rf packages/**/build/ packages/**/*.tsbuildinfo",
    "build": "lerna run build",
    "codestyle:check": "prettier --check",
    "codestyle:format": "prettier --write",
    "lint": "echo 'Not impelmented yet.' && exit 0",
    "release": "lerna publish",
    "test": "echo 'Not impelmented yet.' && exit 0",
    "typecheck": "tsc -b tsconfig.json",
    "verify": "concurrently -c auto npm:\"codestyle:check .\" npm:lint npm:typecheck npm:test"
  },
  "dependencies": {
    "@tsconfig/node22": "^22.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "zod": "^3.25.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "lerna": "^8.2.2",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
